{
  "compilerOptions": {
    // Output folder
    "rootDir": "./src",
    "outDir": "./dist",

    // Node + CommonJS compatibility (best for Express)
    "module": "commonjs",
    "target": "ES2020",

    // Allow ES-style imports with CommonJS output
    "esModuleInterop": true,

    // Make TypeScript aware of Node.js environment
    "types": ["node"],

    // Optional, but recommended in Express backends
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
